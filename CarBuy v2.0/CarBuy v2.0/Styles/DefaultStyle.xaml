<ResourceDictionary xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
                    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml">

    <Style TargetType="Border" x:Key="Border">
        <Setter Property="CornerRadius" Value="10"/>
        <Setter Property="Opacity" Value="0.96"/>
        <Setter Property="BorderBrush" Value="MediumSlateBlue"/>
        <Setter Property="BorderThickness" Value="3"/>
    </Style>

    <Style TargetType="Border" x:Key="OptionsBorder">
        <Setter Property="CornerRadius" Value="10"/>
        <Setter Property="Opacity" Value="0.96"/>
        <Setter Property="BorderBrush" Value="MediumSlateBlue"/>
        <Setter Property="BorderThickness" Value="2"/>
    </Style>

    <Style TargetType="TextBox" x:Key="SearchBox">
        <Setter Property="Background" Value="MediumSlateBlue"/>
        <Setter Property="Width" Value="450"/>
        <Setter Property="BorderThickness" Value="1"/>
        <Setter Property="BorderBrush" Value="White"/>
        <Setter Property="FontFamily" Value="Montserrat"/>
        <Setter Property="FontSize" Value="22"/>
        <Setter Property="VerticalContentAlignment" Value="Center"/>
        <Setter Property="Foreground" Value="White"/>
        <Setter Property="Margin" Value="60,0,0,0"/>
    </Style>

